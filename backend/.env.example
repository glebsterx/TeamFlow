# Application
APP_NAME=TeamFlow
VERSION=0.3.0
DEBUG=False

# Server URL (для инструкций и ссылок)
# Локально: http://localhost
# На VPS: http://your-domain.com или http://your-vps-ip
BASE_URL=http://localhost

# Порты (внешние для доступа)
BACKEND_PORT=8180
FRONTEND_PORT=5180

# Telegram Bot
# Получите токен от @BotFather
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# Telegram Chat ID
# Отправьте сообщение боту, затем откройте:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=-1001234567890

# Database (SQLite with async driver)
DATABASE_URL=sqlite+aiosqlite:///./data/teamflow.db

# Web API (internal port inside container - не меняйте)
API_HOST=0.0.0.0
API_PORT=8000

# CORS (добавьте ваш домен)
# Локально:
BACKEND_CORS_ORIGINS=["http://localhost:5180","http://127.0.0.1:5180"]
# На VPS (замените на ваш домен):
# BACKEND_CORS_ORIGINS=["https://teamflow.your-domain.ru","http://teamflow.your-domain.ru:5180"]

# Telegram Auth (for Web UI)
TELEGRAM_BOT_USERNAME=your_bot_username

# Security
SECRET_KEY=change-this-secret-key-in-production

# Performance
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10


